{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build your Quartz site and run it",
			"type": "shell",
			"command": "npx quartz build --serve",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Update Quartz",
			"type": "shell",
			"command": "npx quartz update"
		},
		{
			"type": "markdownlint",
			"problemMatcher": [
				"$markdownlint"
			],
			"label": "markdownlint: Lint all Markdown files in the workspace with markdownlint",
		}
	]
}